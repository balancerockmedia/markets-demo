<form role="form" class="js-marketsForm">
    <div class="form-group">
    <label for="name">Name</label>
    {{ input value=name id="name" class="form-control" }}
    </div>
    
    <div class="form-group">
    <label for="location">Location</label>
    <select class="form-control" name="location" id="location"></select>
    </div>
    
    <div class="form-group">
    <label for="currency">Currency</label>
    <select class="form-control" name="currency" id="currency"></select>
    </div>
    
    <div class="form-group">
    <label for="start_date">Start Date</label>
    {{ input type="date" value=start_date id="start_date" class="form-control" }}
    </div>
    
    <div class="form-group">
    <label for="end_date">End Date</label>
    {{ input type="date" value=end_date id="end_date" class="form-control" }}
    </div>
</form>